<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightTheme"
    tools:context=".MainActivity">

    <!-- Fragment for Value Display -->

    <fragment
        android:id="@+id/myFirstFragment"
        android:name="com.roilin.trials.finalproject.fragment.BlankFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_blank" />

    <!-- Fragment for Card RecyclerView -->
    <fragment
        android:id="@+id/recyclerFragment"
        android:name="com.roilin.trials.finalproject.fragment.RecyclerFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myFirstFragment"
        tools:layout="@layout/fragment_recycler" />
</androidx.constraintlayout.widget.ConstraintLayout>